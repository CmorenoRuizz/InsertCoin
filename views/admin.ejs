<!DOCTYPE html>
<html>
  <head>

    <%- include("partials/head") %>

  </head>
  <body>

    <header>
      <%- include("partials/header") %>
    </header>

    <main>
      
        <div class="container mt-5">
            <h2 class="text-center mb-4">Panel de administración</h2>
          
            <% if (mensajes.length === 0) { %>
              <p class="text-center">No hay mensajes aún.</p>
            <% } else { %>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% mensajes.forEach(m => { %>
                    <tr>
                      <td><%= m.id %></td>
                      <td><%= m.nombre %></td>
                      <td><%= m.email || '-' %></td>
                      <td><%= m.fecha.toLocaleString() %></td>
                      <td>
                        <button class="btn btn-info btn-sm" data-mensaje="<%= m.mensaje.replace(/"/g, '&quot;') %>" onclick="verMensaje(this)">Ver</button>
                        <form action="/admin/mensaje/<%= m.id %>/eliminar" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } %>
          </div>
          
          <script>
            function verMensaje(btn) {
              const mensaje = btn.dataset.mensaje;
              alert("Mensaje completo:\n\n" + mensaje);
            }
          </script>

    </main>

    <footer>
      <%- include("partials/footer") %>
    </footer>
  </body>
</html>
