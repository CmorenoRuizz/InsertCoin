<!DOCTYPE html>
<html>
  <head>

    <%- include("partials/head") %>

  </head>
  <body>

    <header>
      <% if (user) { %>
        <%- include("partials/headerUser") %>
      <% } else { %>
        <%- include("partials/header") %>
      <% } %>
    </header>

<main id="main-juegos">
  <div class="scroll-arrows">
    <div id="scroll-arrow-up" class="scroll-arrow scroll-arrow-up">
      <i class="fas fa-chevron-up"></i>
    </div>
    <div id="scroll-arrow-down" class="scroll-arrow scroll-arrow-down">
      <i class="fas fa-chevron-down"></i>
    </div>
  </div>
  <section class="juego-section tetris">
    <div class="outer">
      <div class="inner">
        <div class="bg">
          <h2 class="section-heading">Tetris</h2>
          <div class="juego-actions">
            <button class="btn-instrucciones" data-juego="tetris">Instrucciones</button>
            <a href="/juegos/tetris" class="btn-jugar">Jugar ahora</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="juego-section snake">
    <div class="outer">
      <div class="inner">
        <div class="bg">
          <h2 class="section-heading">Snake</h2>
          <div class="juego-actions">
            <button class="btn-instrucciones" data-juego="snake">Instrucciones</button>
            <a href="/juegos/snake" class="btn-jugar">Jugar ahora</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="juego-section flappybird">
    <div class="outer">
      <div class="inner">
        <div class="bg">
          <h2 class="section-heading">Flappy Bird</h2>
          <div class="juego-actions">
            <button class="btn-instrucciones" data-juego="flappybird">Instrucciones</button>
            <a href="/juegos/flappybird" class="btn-jugar">Jugar ahora</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
      
<!-- Modal de instrucciones -->
<div class="modal fade" id="modalInstrucciones" tabindex="-1" aria-labelledby="modalInstruccionesLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark text-white">
      <div class="modal-header border-0">
        <h5 class="modal-title font-arcade" id="modalInstruccionesLabel">Instrucciones</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body" id="contenido-instrucciones">
        <!-- Aquí se insertará el contenido dinámicamente -->
      </div>
    </div>
  </div>
</div>


    
      <%- include("partials/footer") %>
    
      <script src="/javascripts/juegosAnimations.js"></script>
      <script src="/javascripts/modalJuegos.js"></script> 
  </body>
</html>
