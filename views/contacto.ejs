<!DOCTYPE html>
<html>
  <head>

    <%- include("partials/head") %>

  </head>
  <body>

    <header>
      <% if (user) { %>
        <%- include("partials/headerUser") %>
      <% } else { %>
        <%- include("partials/header") %>
      <% } %>
    </header>

    <main>
      <section class="contact-container">
        <div class="container">
          <div class="row align-items-center">
            <!-- Formulario de contacto -->
            <div class="col-lg-6 order-lg-1 order-2 mb-4 mb-lg-0">
              <div class="contact-form-container">
                <h2 class="contact-form-title">Contacto con el administrador</h2>

                <% if (success) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>

                <form action="/contacto" method="POST" class="contact-form">
                  <div class="mb-3">
                    <label class="form-label">Nombre o usuario</label>
                    <% if (user) { %>
                      <input type="text" class="form-control" name="nombre" value="<%= user.username %>" readonly>
                    <% } else { %>
                      <input type="text" class="form-control" name="nombre" required>
                    <% } %>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Correo electrónico (opcional)</label>
                    <input type="email" class="form-control" name="email">
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Mensaje</label>
                    <textarea class="form-control" name="mensaje" rows="5" required></textarea>
                  </div>

                  <button type="submit" class="btn contact-btn w-100">Enviar mensaje</button>
                </form>
              </div>
            </div>

            <!-- Imagen arcade / ilustración -->
            <div class="col-lg-6 order-lg-2 order-1 d-flex flex-column justify-content-center">
              <div class="contact-image">
                <img src="/images/logo.png" alt="Contacto InsertCoin" class="img-fluid">
              </div>
              <div class="contact-message">
                <p id="contacto-mensaje-animado"></p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    
      <%- include("partials/footer") %>
    
      <script src="/javascripts/contactoAnimations.js"></script>
  </body>
</html>
